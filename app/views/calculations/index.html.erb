<%= render "shared/header" %>

<div class="calc-contents">
  <header class="calc-header">
  </header>
  <%# 情報 %>
  <div class="calc-main">
   <%= form_with model: @calculation, url:calculations_path, local: true do |f| %>
   <div class="calc-title-one">総数入力</div>
   <div class="indispensable-description">必須項目です。</div>
   <div class="total">
      <div class="total-payment">
        <span>総支払額</span>
        <span class="indispensable">※</span>
         <%= f.text_field :total_payment, type:"number", class:"total-people", id:"total-payment", placeholder:"例）50000" %>円
      </div>
      <div class="total-people">
        <span>総人数</span>
        <span class="indispensable">※</span>
         <%= f.text_field :total_people, type:"number", class:"total-people", id:"total-people", placeholder:"例）5" %>人
      </div>
    </div>
      <div class="calc-title-two">計算入力</div>
        <div class="calc-description">グループ2以降から数値を入力してください。<span class="indispensable-description">※は必須項目です。</span></div>
        <div class="description">一人あたりの支払額は十の位で切り上げ、比率は小数点第二位で切り捨てを行なっています。</div>
    <%# 情報 %>

  
    <%# 計算 %>
      <div class="group">
        <div class="group-text">
          <span class="group-name">グループ名</span>
        </div>

        <div class="group">
          <div class="group-text">
            <span>人数</span>
          </div>
        </div>

        <div class="group">
          <div class="group-text">
            <span>比率</span>
          </div>
        </div>

        <div class="group">
          <div class="group-text">
            <span>一人あたり</span>
          </div>
        </div>
      </div>

    <%# グループ１ %>
   
      <div class="group">
        <div class="group-text">
          <span class="group-name"></span>
          <%= f.text_field :group_name_one, class:"group-input-name", id:"group-name-one", placeholder:"例）グループ１" %>
        </div>

        <div class="group-text">
          <span class="indispensable">※</span>
          <%= f.text_field :people_one, type:"number", class:"group-input", id:"group-people-one", placeholder:"例）1",readonly: true %>人
        </div>

        <div class="group">
          <div class="group-text-one">
            <span id='group-ratio-one'></span> 
            <span :ratio_one, class = "unit"> %</span>
          </div>
        </div>

        <div class="group">
          <div class="group-text-one">
            <span id='group-price-one'></span>
            <span :price_one, class = "unit"> 円</span>
          </div>
        </div>
      </div>

    <%# グループ１ %>

    <%# グループ2 %>
    <div class="group">
      <div class="group-text">
        <%= f.text_field :group_name_two, class:"group-input-name", id:"group-name-two", placeholder:"例）グループ２" %>
      </div>

      <div class="group-text">
        <span class="indispensable">※</span>
        <%= f.text_field :people_two, type:"number", class:"group-input", id:"group-people-two", placeholder:"例）1" %>人
      </div>

      <div class="group-text">
         <span class="indispensable">※</span>
         <%= f.text_field :ratio_two, type:"number", class:"group-input", id:"group-ratio-two" ,placeholder:"例）10" %>%
      </div>

      <div class="group-text">
         <span class="indispensable">※</span>
         <%= f.text_field :price_two, type:"number", class:"group-input", id:"group-price-two", placeholder:"例）10000" %>円
      </div>
    </div>
    <%# グループ２ %>

    <%# グループ3 %>
    <div class="group">
      <div class="group-text">
        <%= f.text_field :group_name_three, class:"group-input-name", id:"group-name-three", placeholder:"例）グループ3" %>
      </div>

      <div class="group-text">
        <span class="indispensable">&nbsp;&nbsp;&nbsp;</span>
        <%= f.text_field :people_three, type:"number", class:"group-input", id:"group-people-three", placeholder:"例）1" %>人
      </div>

      <div class="group-text">
         <span class="indispensable">&nbsp;&nbsp;&nbsp;</span>
         <%= f.text_field :ratio_three, type:"number", class:"group-input", id:"group-ratio-three", placeholder:"例）10" %>%
      </div>
      
      
      <div class="group-text">
         <span class="indispensable">&nbsp;&nbsp;&nbsp;</span>
         <%= f.text_field :price_three, type:"number", class:"group-input", id:"group-price-three", placeholder:"例）10000" %>円
      </div>
    </div>
    <%# グループ3 %>

  <div class="group-invisible">
    <div class="indivisible-number">      
      <span>あまり</span>
      <span id='indivisible-number'></span>円
    </div>
  </div>
    <%# 計算 %>

    <div class="sell-btn-contents">
      <%= f.submit "保存",class:"sell-btn" %>
    </div>
    <%# <div><%= link_to '保存', calculations_path, method: :post,class: "login"</div> %>
     
  
  <% end %>
</div>
