<%= render "shared/header" %>

<div class="calc-contents">
<header class="calc-header">
</header>
  
  <div class='calc-main'>
    <%= form_with model: @user, url:user_registration_path, local: true do |f| %>
      
      <div class="under-line">
        <h1 class='calc-title-one'>
          会員情報入力
        </h1>
      </div>
      

      <%= render 'shared/error_messages', model: f.object %>
      
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">ニックネーム<span class="indispensable">※</span></label>
        </div>
        <%= f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"例) 割り勘くん", maxlength:"10" %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">メールアドレス<span class="indispensable">※</span></label>
        </div>
        <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC or 携帯", autofocus: true %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">パスワード<span class="indispensable">※</span></label>
        </div>
        <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上/半角/英数字混合" %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">パスワード(確認)<span class="indispensable">※</span></label>
        </div>
        <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力" %>
        <div class='register-btn'>
          <%= f.submit "会員登録" ,class:"register-black-btn" %>
        </div>
      </div>

    <% end %>
  </div>

</div>

